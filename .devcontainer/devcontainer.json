{
    "name": "ROS 2 SO-101",
    "privileged": true,
    "remoteUser": "ros",
    "dockerComposeFile": "./compose.yaml",
    "workspaceFolder": "/home/ros/ros2_ws/src/ros2_so101",
    "service": "devcontainer",
    "forwardPorts": [
        8080
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "streetsidesoftware.code-spell-checker",
                "ranch-hand-robotics.rde-ros-2",
                "ranch-hand-robotics.urdf-editor"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/ros/ros2_ws/src/ros2_so101,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.env,target=/home/ros/.env,type=bind,consistency=cached"
    ],
    "postStartCommand": "/bin/bash /home/ros/ros2_ws/src/ros2_so101/.devcontainer/post_create.sh"
}